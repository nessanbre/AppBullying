<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Container principal (centraliza tudo na vertical) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Card branco -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_form_card"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="CADASTRO"
                android:textColor="#6C63FF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Campos: Dia / Mês / Ano -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editDIA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input"
                    android:gravity="center"
                    android:hint="DIA"
                    android:inputType="number"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/editMÊS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input"
                    android:gravity="center"
                    android:hint="MÊS"
                    android:inputType="number"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/editANO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input"
                    android:gravity="center"
                    android:hint="ANO"
                    android:inputType="number"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Senha -->
            <EditText
                android:id="@+id/editRARG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input"
                android:hint="RA/RG"
                android:inputType="textPassword"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editSENHA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_input"
                android:hint="SENHA"
                android:inputType="textPassword"
                android:padding="12dp" />

            <!-- Confirmar senha -->
            <EditText
                android:id="@+id/editCONFIRMARSENHA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_input"
                android:hint="CONFIRMAR SENHA"
                android:inputType="textPassword"
                android:padding="12dp" />

            <!-- Botão -->
            <Button
                android:id="@+id/editENTRAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="ENTRAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
